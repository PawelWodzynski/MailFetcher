version: '3.8'

services:
  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    ports:
      - "8080:8080"
    environment:
      - SPRING_PROFILES_ACTIVE=prod
      # Dodajemy zmienną środowiskową do połączenia z MongoDB
      - SPRING_DATA_MONGODB_URI=mongodb://mongodb:27017/mail-downloader
    restart: unless-stopped
    volumes:
      - ./logs:/app/logs
    depends_on:
      - mongodb
  
  mongodb:
    image: mongo:latest
    ports:
      - "27017:27017"
    volumes:
      - mongo-data:/data/db
      - ./database/init.js:/docker-entrypoint-initdb.d/init.js:ro
    environment:
      - MONGO_INITDB_DATABASE=mail-downloader
    restart: unless-stopped

volumes:
  mongo-data:
